<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.h.chad.mixtape">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".createMix"
            android:label="Create Mixtape"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".searchForMusic"
            android:label="Search for Track"
            android:parentActivityName=".createMix" />
        <activity
            android:name=".Playing"
            android:label="Now Playing"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TrackInformation"
            android:label="More Information"
            android:parentActivityName=".Playing"/>
    </application>

</manifest>