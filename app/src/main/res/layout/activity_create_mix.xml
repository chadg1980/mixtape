<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_mix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context="com.h.chad.mixtape.createMix"
    android:background="@color/colorNewMixText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createMixtape"
            android:textColor="@color/colorBlack"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/addTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorNewMixBackground"
            android:text="@string/addTrack"
            android:textAlignment="center"
            android:textColor="@color/colorNewMixText"
            android:textSize="25dp" />
    </LinearLayout>
</ScrollView>
